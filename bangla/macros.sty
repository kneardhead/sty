% Old Factorial
\RequirePackage{rotating}
\RequirePackage{tkz-berge}
\RequirePackage{tabu}
\usetikzlibrary{calc}
\newcommand{\oldfactorial}[1]{%
	\tikz[baseline]{%
		\node[anchor=base,inner sep=0.3ex](mynode){\ensuremath{#1}};
		\draw(mynode.north west)--(mynode.south west)--(mynode.south east);
		\path[use as bounding box]($(mynode.south west)+(-0.3ex,-0.3ex)$)rectangle($(mynode.north east)+(0.3ex,0.3ex)$);
	}
}