        \newcommand{\prob}[4]{
            \ifthenelse{\isempty{#1}}{% 
                \ifthenelse{\isempty{#2}}{% 
                    \begin{problem}
                        \index[prob]{unknown source}
                        #4
                    \end{problem} 
                }{% 
                    \begin{problem}[#2]
                        \index[prob]{#2}
                        \label{problem:#2}
                        #4
                    \end{problem} 
                }%
            }{% 
                \begin{problem}[\href{#1}{#2}]
                    \index[prob]{#2}
                    \label{problem:#2}
                    #4
                \end{problem} 
            }%
        }

        \newcommand{\gene}[3]{
            \begin{generalization}[\href{#1}{#2}]
                \index[prob]{#2}
                #3
            \end{generalization}
        }


        \newcommand{\theo}[3]{
            \ifthenelse{\isempty{#1}}{% 
                \ifthenelse{\isempty{#2}}{% 
                    \begin{theorem}
                        #3
                    \end{theorem}
                }{% 
                    \begin{theorem}[#2]
                        \index[thm]{#2}
                        \label{theorem:#2}
                        #3
                    \end{theorem}
                }%
            }{% 
                \begin{theorem}[\href{#1}{#2}]
                    \index[thm]{#2}
                    \label{theorem:#2}
                    #3
                \end{theorem}
            }%
        }


        \newcommand{\thmbox}[3]{
            \begin{BoxedTheorem}[\href{#1}{#2}]
                \index[thm]{#2} \label{theorem:#2} #3
            \end{BoxedTheorem}
        }

        \newcommand{\prop}[2]{
            \begin{proposition}[{#1}]
                \index[thm]{#1} \label{theorem:#1} #2
            \end{proposition}
        }

        \newcommand{\coro}[1]{
            \begin{corollary}
                #1
            \end{corollary}
        }


        \newcommand{\lem}[2]{
            \ifthenelse{\isempty{#1}}{% 
                \begin{lemma}
                    \index[thm]{unnamed}
                    #2
                \end{lemma}
            }{% 
                \begin{lemma}[#1]
                    \index[thm]{#1} \label{lemma:#1} #2
                \end{lemma}
            }%
        }


